#!/bin/bash -e

. settings

TARGET_DATE="$1"
OWNER="$2"
ENGINEER="$3"

if [[ -z $TARGET_DATE ]] ; then
	read -r -p "Target date (YYYY-MM-DD): " TARGET_DATE
	READ=1
fi
if [[ -z $OWNER ]] ; then
	read -r -p "Release owner (Discourse usernmame): " OWNER
	READ=1
fi
if [[ -z $ENGINEER ]] ; then
	read -r -p "Release engineer (Discourse usernmame): " ENGINEER
	READ=1
fi
if [[ $READ == 1 ]] ; then
	echo >&2
fi

./procedure release --project "$PROJECT" --version "$FULLVERSION" --target-date "$TARGET_DATE" --owner "$OWNER" --engineer "$ENGINEER"
